---
  import interrogante from '../../public/img/interrogante.jpg';

  const { data } = Astro.props
---

<div class="bg-white rounded-lg shadow-lg p-4 mx-10 m-4 mb-10">
  <img src={interrogante} alt="pokemon oculto" />
  <div class="">
    <h2 class="text-2xl text-center font-bold mb-5">{data.name}</h2>
    <div class="flex justify-center items-center w-full">
      <a
        href={data.url}
        class="text-white bg-indigo-600 transition-colors hover:bg-indigo-800 px-2 py-1 rounded-lg shadow-lg">
        Ver Pokemon
      </a>
    </div>
  </div>
</div>
